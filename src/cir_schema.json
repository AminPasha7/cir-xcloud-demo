{
  "$id": "https://example.com/cir.schema.json",
  "type": "object",
  "required": ["version","id","conditions","action","resources"],
  "properties": {
    "version": {"type":"string","enum":["0.1"]},
    "id": {"type":"string"},
    "priority": {"type":"string","enum":["low","medium","high"],"default":"low"},
